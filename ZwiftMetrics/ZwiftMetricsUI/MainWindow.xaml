        <Image x:Name="BackgroundImage" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="200" Source="Images/Edge520.png" Cursor="SizeAll" MouseLeftButtonDown="BackgroundImage_MouseLeftButtonDown"/>
